+                break;
+            }
+            case adInteger:
+            {
+                found = column_match_integer(filters->condition,
+                                         V_I4(&recordset->data[recordset->index * colcnt + filters->column]),
+                                         V_I4(&filters->value));
+                break;
+            }
+            default:
+                FIXME("Unsupported datatype %d\n", datatype);
+        }
+
+        if (found)
+        {
+            TRACE("Return record %ld\n", recordset->index);
+            break;
+        }
+    }
+
